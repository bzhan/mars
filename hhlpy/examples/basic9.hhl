# Basic benchmark, problem9
# dG Rule
# {x>0 & y>0} 
#
#   t := 0; 
#   <x_dot = -x, t_dot = 1 & t < 1>;
#   (x := x+3)**@invariant(x > 0) ++ y := x 
#
# {x>0 & y>0}
pre [x > 0] [y > 0];
t := 0; 
<x_dot = -x, t_dot = 1 & t < 1> 
invariant 
    ghost z 
    [x * z * z == 1] 
    [x > 0] 
    [y > 0]; 
{x := x+3;}* invariant [x > 0] [y > 0]; ++ y := x;
post [x > 0] [y > 0];